<div class="accordion" id="accordion2">
    <% @diaries.each do |diary| %>
        <div class="accordion-group">
            <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href=<%= "#" + diary.id.to_s %>>
                    <%= diary.data_consulta %> | <%= diary.diagnostico %>
                </a>
            </div>
            <div id=<%= diary.id %> class="accordion-body collapse">
                <div class="accordion-inner">
                    <dl>
                        <dt>História Clínica</dt>
                        <dd><%= diary.historial %></dd>
                        <%= link_to 'Apagar nota', [@patient,diary], method: :delete, data: { confirm: 'Tem a certeza?' }, class: 'btn btn-small btn-danger pull-right' %>
                        <%= link_to "Editar nota", edit_patient_diary_path(@patient, diary), class: 'btn btn-small pull-right' %>
                    </dl>
                </div>
            </div>
        </div>
    <% end %>
</div>